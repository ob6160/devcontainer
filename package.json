{
  "private": true,
  "workspaces": {
    "packages": [
      "@devcontainer/*",
      "packages/*",
      "website"
    ]
  },
  "scripts": {
    "release": "yarn build && lerna publish && yarn push",
    "build": "yarn xxx build && yarn xxx generate:dockerfile && yarn xxx docker:build",
    "push": "yarn build && yarn xxx docker:push",
    "xxx": "yarn wsrun --exclude-missing"
  },
  "publicConfig": {
    "access": "public"
  },
  "name": "devcontainer",
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-google": "^0.13.0",
    "lerna": "^3.16.4",
    "wsrun": "^5.0.0"
  }
}
