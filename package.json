{
  "private": true,
  "workspaces": {
    "packages": [
      "@devcontainer/*",
      "packages/*",
      "website"
    ]
  },
  "scripts": {
    "release": "yarn docker:build && lerna publish",
    "docker:build": "yarn workspaces run build && yarn workspaces run generate:dockerfiles && yarn workspaces run dockerBuild",
    "docker:push": "yarn workspaces run push"
  },
  "publicConfig": {
    "access": "public"
  },
  "name": "devcontainer",
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-google": "^0.13.0",
    "lerna": "^3.16.4"
  }
}
